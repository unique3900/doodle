{
  "extends": "@monorepo/tsconfig/next.json",
  "compilerOptions": {
    "paths": {
      "@/*": ["./src/*"],
      "@monorepo/*": ["../../packages/*/src"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "tailwind.config.ts",
    "eslint.config.mjs"
  ],
  "exclude": ["node_modules"]
}
